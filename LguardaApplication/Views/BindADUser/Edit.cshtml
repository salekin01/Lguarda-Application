@model LgurdaApp.Model.ControllerModels.LG_USER_AD_BINDING_MAP
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@section featured
{
<section class="featured">
    <div class="content-wrapper">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "BindAdUserFormId" }))
        {
        @Html.AntiForgeryToken()

        <div class="container scrollMainDiv">
            <div>
                <h4 class="PageTitle">AD BINDING</h4>
                <a href="@Url.Action("Index")">
                    <span class="glyphicon glyphicon-chevron-left LeftPadding"></span>
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
            </div>

            @Html.ValidationSummary(true)

            <div class="scrollBodyDiv LeftPadding">
                <div class="row LeftPadding">
                    <div class="col-xs-6 form-group ">
                        @Html.LabelFor(model => model.SL, "SL", new { @class = "control-label col-md-3" })
                        @Html.TextBoxFor(model => model.SL, new { @readonly = "readonly", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SL)
                    </div>
                </div>

                <div class="row LeftPadding">
                    <div class="col-xs-6 form-group ">
                        @Html.LabelFor(model => model.USER_ID, "USER ID", new { @class = "control-label col-md-3" })
                        @Html.TextBoxFor(model => model.USER_ID, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.USER_ID)
                    </div>
                </div>

                <div class="row LeftPadding">
                    <div class="col-xs-6 form-group ">
                        @Html.LabelFor(model => model.DOMAIN_ID, "DOMAIN ID", new { @class = "control-label col-md-3" })
                        @Html.TextBoxFor(model => model.DOMAIN_ID, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DOMAIN_ID)
                    </div>
                </div>

                <div class="row LeftPadding">
                    <div class="col-xs-6 form-group ">
                        @Html.LabelFor(model => model.DOMAIN, "DOMAIN NAME", new { @class = "control-label col-md-3" })
                        @Html.TextBoxFor(model => model.DOMAIN, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DOMAIN)
                    </div>
                </div>
                <div class="row LeftPadding">
                    <div class="col-xs-1 form-group">
                        @Html.CheckBoxFor(model => model.AD_ACTIVE_FLAG_B, new { @id = "AD_ACTIVE_FLAG" })
                    </div>
                    <div>
                        @Html.Label("ACTIVE", new { style = "text-align:left;" })
                    </div>
                </div>

                <div class="row LeftPadding">
                    <div class="row LeftPadding">
                        <div class="col-xs-2 form-group ">
                            <button type="submit" name="command" value="Update" class="btn btn-primary">
                                <i class="glyphicon glyphicon-floppy-disk"></i>
                            </button>
                            <button type="reset" class="btn btn-primary " id="btnreset" value="Clear">
                                <span class="glyphicon glyphicon-refresh"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }

        @if (ViewData["Error"] != null)
        {
        <p class="element errormsg"> @ViewData["Error"].ToString()</p>
        }
        @if (ViewData["Success"] != null)
        {
        <p class="element successmsg"> @ViewData["Success"].ToString()</p>
        }

    </div>
</section>
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(document).ready(function () {
        $('#btnreset').click(function () {
            $('#BindAdUserFormId')[0].reset();
            $(".field-validation-error").empty();
            $(".element").empty();
            return false;
        });
    });
</script>










