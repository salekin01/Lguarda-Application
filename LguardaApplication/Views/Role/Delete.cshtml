@model LgurdaApp.Model.ControllerModels.LG_FNR_ROLE_MAP

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section featured
{
    <section class="featured">
        <div class="content-wrapper">
            <div class="container scrollMainDiv">


                <div class="row">
                    <h4 class="PageTitle">Role Setup</h4>
                    <a href="@Url.Action("Index")">
                        <span class="glyphicon glyphicon-chevron-left LeftPadding"></span><span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                </div>
                <div class=" container scrollBodyDiv LeftPadding">
                    <dl class=" container dl-horizontal">
                        <dt class="text-primary">
                            @Html.DisplayName("Role ID")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ROLE_ID)
                        </dd>
                    </dl>
                    <dl class="container dl-horizontal">
                        <dt class="text-primary">
                            @Html.DisplayName("Role Name")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ROLE_NAME)
                        </dd>
                    </dl>
                    <dl class="container dl-horizontal">
                        <dt class="text-primary">
                            @Html.DisplayName("Role Description")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ROLE_DESCRIP)
                        </dd>
                    </dl>
                    <dl class="container dl-horizontal">
                        <dt class="text-primary">
                            @Html.DisplayName("Auth Status ID")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.AUTH_STATUS_ID)
                        </dd>
                    </dl>
                    <dl class="container dl-horizontal">
                        <dt class="text-primary">
                            @Html.DisplayName("Last Action")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.LAST_ACTION)
                        </dd>
                    </dl>
                    <dl class="container dl-horizontal">
                        <dt class="text-primary">
                            @Html.DisplayName("Last Update Date")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.LAST_UPDATE_DT)
                        </dd>
                    </dl>
                    <dl class="container dl-horizontal">
                        <dt class="text-primary">
                            @Html.DisplayName("Make Date")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.MAKE_DT)
                        </dd>
                    </dl>


                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" name="command" value="Delete" class="btn btn-primary btn-sm" />
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <p class="MsgSection"> @TempData["Error"].ToString()</p>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <p class="element"> @TempData["Success"].ToString()</p>
                    }
                </div>
            </div>
        </div>
    </section>
}
