@model IEnumerable<LgurdaApp.Model.ControllerModels.LG_USER_SETUP_PROFILE_MAP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    #constrainer {
        height: 70%;
        width: 100%;
    }

    .scrolltable {
        overflow-x: scroll;
        height: 100%;
    }

        .scrolltable > .body {
            width: -webkit-fit-content;
            overflow-y: scroll;
        }

    .scrolltable {
        display: flex;
        display: -webkit-flex;
        flex-direction: column;
        -webkit-flex-direction: column;
    }

        .scrolltable > .header {
        }

        .scrolltable > .body {
            flex: 1;
            -webkit-flex: 1;
        }

    th, td {
        min-width: 150px;
    }
</style>
@section featured
{

    <section class="featured">
        <div class="content-wrapper scrollMainDiv" id="indexSearch">
            <div class="row">
                <div class="col-xs-4 form-group ">
                    <a href="@Url.Action("Create")"><span class="glyphicon glyphicon-plus LeftPadding"> </span></a>
                    <a href="@Url.Action("Index", "Home")">&nbsp;&nbsp;<span class="glyphicon glyphicon-home"></span></a>
                </div>

                <div class="col-xs-4 form-group indexBackground">
                </div>
                <div class="col-xs-4 form-group ">
                    @*<a class="float-right" href="@Url.Action("ExportToPdf")"> &nbsp;<span class="glyphicon glyphicon-print float-right"> </span></a>
                    <a class="float-right" href="@Url.Action("AddFavorites")">&nbsp;<span class="glyphicon glyphicon-star float-right"></span></a>*@
                    <a class="float-right" href="@Url.Action("Index", "UserProfileSetup")">&nbsp;<span class="glyphicon glyphicon-refresh float-right" style="color:black"> </span></a>
                    @*<div class="icon-addon addon-sm float-right">
                        <input type="text" placeholder="Search" onkeyup="highlightSearchText(this, 'searchTable')" class="form-control" id="keyWord" style=" font-size: 12px " />
                        <label for="keyWord" class="glyphicon glyphicon-search" title="Search"></label>
                    </div>*@
                </div>
            </div>
            <h4 class="PageTitle">User Profile</h4>
            <div id="constrainer">
                <div class="scrolltable" id="searchTable">
                    <table class="table table-striped LeftPadding" id="searchTable">
                        <tr>
                            <th>
                                User ID
                            </th>
                            <th>
                                Classification
                            </th>
                            <th>
                                Area
                            </th>
                            <th>
                                Area wise ID
                            </th>
                            <th>
                                User Name
                            </th>
                            <th>
                                User Desc.
                            </th>
                            @*<th>
                                Employee Id
                            </th>
                            <th>
                                Customer Id
                            </th>
                            <th>
                                Agent Id
                            </th>*@
                            <th>
                                Branch
                            </th>
                            <th>
                                Acc No.
                            </th>
                            <th>
                                Father's Name
                            </th>
                            <th>
                                Mother's Name
                            </th>
                            <th>
                                D.O.B
                            </th>
                            <th>
                                Mail Address
                            </th>
                            <th>
                                Mob No
                            </th>
                            <th>
                                Auth
                            </th>
                            <th>
                                Terminal Ip
                            </th>
                            <th>
                                Working Hour
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.USER_ID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CLASSIFICATION_NAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AREA_NAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.USER_AREA_ID_VALUE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.USER_NAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.USER_DESCRIPTION)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.EMPLOYEE_ID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CUSTOMER_ID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AGENT_ID)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.BRANCH_NAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ACC_NO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FATHERS_NAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MOTHERS_NAME)
                                </td>
                                <td>
                                    @if (item.DOB != null)
                                    {
                                        string.Format("{0:dd/MM/yyyy}", Convert.ToDateTime(Html.DisplayFor(model => item.DOB).ToString()));
                                    } 
                                    else
                                    {
                                        Html.DisplayFor(model => item.DOB);
                                    }  
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MAIL_ADDRESS)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MOB_NO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AUTHENTICATION_NAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TERMINAL_IP)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.WORKING_HOUR)
                                </td>
                                @*<td>
                                        @Html.ActionLink("Details", "Details", new { id = item.USER_ID })
                                    </td>*@

                                <td>
                                    <a class="btn btn-sm" @*href="@Url.Action("Edit", new { id = item.USER_ID })"*@>
                                        <span class="glyphicon glyphicon-pencil text-primary"> </span>
                                    </a>|
                                    <a class="btn btn-sm " @*href="@Url.Action("Details", new { id = item.USER_ID })"*@>
                                        <span class="glyphicon glyphicon-book text-success"> </span>
                                    </a>
                                    |
                                    <a class="btn  btn-sm" @*href="@Url.Action("Delete", new { id = item.USER_ID })"*@>
                                        <span class="glyphicon glyphicon-trash text-danger "> </span>
                                    </a>
                                </td>

                            </tr>
                        }
                    </table>
                </div>
            </div>
            @if (TempData["Error"] != null)
            {
                <p class="element errormsg"> @TempData["Error"].ToString()</p>
            }
            @if (TempData["Success"] != null)
            {
                <p class="MsgSectionEdit"> @TempData["Success"].ToString()</p>
            }
        </div>

        <style>
            .highlighted {
                background-color: Yellow;
            }
        </style>
        <script src="~/Scripts/Search.js"></script>
    </section>
}

