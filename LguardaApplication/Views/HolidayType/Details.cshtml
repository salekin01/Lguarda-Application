

@model LgurdaApp.Model.ControllerModels.LG_SYS_HOLIDAY_TYPE_MAP

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section featured
{
    <section class="featured">
        <div class="content-wrapper">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="container scrollMainDiv">
                    <div>
                        <h4 class="PageTitle">Holiday  Setup</h4>
                        <a href="@Url.Action("Index")">
                            <span class="glyphicon glyphicon-chevron-left LeftPadding"></span><span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                    </div>
                    @*<hr />*@
                    @Html.ValidationSummary(true)
                    <div class="scrollBodyDiv LeftPadding">
                        <dl class=" container dl-horizontal">
                            <dt class="text-primary">
                                @Html.DisplayNameFor(model => model.HOLIDAY_TYPE_ID)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.HOLIDAY_TYPE_ID)
                                @Html.HiddenFor(m => m.HOLIDAY_TYPE_ID)
                            </dd>
                        </dl>
                        <dl class=" container dl-horizontal">
                            <dt class="text-primary">
                                @Html.DisplayNameFor(model => model.HOLIDAY_TYPE_NM)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.HOLIDAY_TYPE_NM)
                                @Html.HiddenFor(model => model.HOLIDAY_TYPE_NM)
                            </dd>
                        </dl>
                        <dl class=" container dl-horizontal">
                            <dt class="text-primary">
                                @Html.DisplayNameFor(model => model.WEEKEND)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.WEEKEND)
                                @Html.HiddenFor(model => model.WEEKEND)
                            </dd>
                        </dl>
                      
                        <div class="row LeftPadding">
                            <div style="margin-top: 15px; ">
                                <div>
                                    <table id="gridEdit"></table>
                                    <div id="pager"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <p class="MsgSection"> @TempData["Error"].ToString()</p>
            }
            @if (TempData["Success"] != null)
            {
                <p class="element "> @TempData["Success"].ToString()</p>
            }
        </div>
    </section>
}



