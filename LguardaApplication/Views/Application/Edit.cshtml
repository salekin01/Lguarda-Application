@model LgurdaApp.Model.ControllerModels.LG_FNR_APPLICATION_MAP

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section featured
{
    <section class="featured">
        <div class="content-wrapper">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "ApplicationFormId" }))
            {
                @Html.AntiForgeryToken()

                <div class="container scrollMainDiv">
                    <div>
                        <h4 class="PageTitle">Application Setup</h4>
                        <a href="@Url.Action("Index")">
                            <span class="glyphicon glyphicon-chevron-left LeftPadding"></span><span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                    </div>

                    @Html.ValidationSummary(true)

                    <div class="scrollBodyDiv LeftPadding">
                        <div class="row LeftPadding">
                            <div class="col-xs-6 form-group ">
                                @Html.LabelFor(model => model.APPLICATION_ID, "Application Id", new { @class = "control-label col-md-3" })
                                @Html.TextBoxFor(model => model.APPLICATION_ID, new { @readonly = "readonly", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.APPLICATION_ID)
                            </div>
                        </div>

                        <div class="row LeftPadding">
                            <div class="col-xs-6 form-group ">
                                @Html.LabelFor(model => model.APPLICATION_NAME, "Application Name", new { @class = "control-label col-md-3" })
                                @Html.TextBoxFor(model => model.APPLICATION_NAME, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.APPLICATION_NAME)
                            </div>
                        </div>

                        <div class="row LeftPadding">
                            <div class="col-xs-6 form-group ">
                                @Html.LabelFor(model => model.APP_TYPE_ID, "App Type", new { @class = "control-label col-md-3" })
                                @Html.DropDownListFor(model => model.APP_TYPE_ID, Model.LIST_APP_TYPE, "---------- Select ----------", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.APP_TYPE_ID)
                            </div>
                        </div>

                        <div class="row LeftPadding">
                            <div class="row LeftPadding">
                                <div class="col-xs-2 form-group ">
                                    <button type="submit" name="command" value="Update" class="btn btn-primary">
                                        <i class="glyphicon glyphicon-floppy-disk"></i>
                                    </button>
                                    <button type="reset" class="btn btn-primary " id="btnreset" value="Clear">
                                        <span class="glyphicon glyphicon-refresh"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (ViewData["Error"] != null)
            {
                <p class="element errormsg"> @ViewData["Error"].ToString()</p>
            }
            @if (ViewData["Success"] != null)
            {
                <p class="element successmsg"> @ViewData["Success"].ToString()</p>
            }

        </div>
    </section>
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(document).ready(function () {
        $('#btnreset').click(function () {
            $('#ApplicationFormId')[0].reset();
            $(".field-validation-error").empty();
            return false;
        });
    });
</script>










